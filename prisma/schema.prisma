enum DailyLogStatus {
  PLANNING
  EXECUTION
  HISTORY
}

enum TodoStatus {
  PENDING
  DONE
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  timezone      String    @default("UTC")

  accounts Account[]
  sessions Session[]

  dailyLogs    DailyLog[]
  backlogItems BacklogItem[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DailyLog {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  date     String
  status   DailyLogStatus
  isLocked Boolean @default(false)

  score     Int?
  summary   String?
  aiSummary String?
  sweptAt   DateTime?

  hourBlocks HourBlock[]
  todos      Todo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId, date])
}

model HourBlock {
  id          String   @id @default(cuid())
  dailyLogId  String
  dailyLog    DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)
  hour        Int
  plannedText String   @default("")
  reflectionText String @default("")

  todos Todo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dailyLogId, hour])
  @@index([dailyLogId, hour])
}

model Todo {
  id              String   @id @default(cuid())
  dailyLogId      String
  dailyLog        DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)
  hourBlockId     String
  hourBlock       HourBlock @relation(fields: [hourBlockId], references: [id], onDelete: Cascade)

  title            String
  status           TodoStatus @default(PENDING)
  estimatedMinutes Int
  actualMinutes    Int?
  sortOrder        Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dailyLogId])
  @@index([hourBlockId, sortOrder])
}

model BacklogItem {
  id              String @id @default(cuid())
  userId          String
  user            User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title            String
  estimatedMinutes Int
  actualMinutes    Int?

  sourceDate String?
  sourceHour Int?

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
